{
  "name": "mediator",
  "scopeName": "source.mediator",
  "fileTypes": [
    ".med"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.mediator",
      "match": "\\b(as|async|automaton|bool|broadcast|capacity|char|components|connections|const|else|enum|for|func|function|group|if|in|initial|int|interface|internals|let|out|real|return|statements|struct|sync|system|transitions|type|typedef|unicast|variables)\\b"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.mediator",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.mediator"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.mediator"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.mediator"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.mediator"
        }
      ]
    }
  }
}